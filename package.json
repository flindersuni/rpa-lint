{
  "name": "flinders-xaml-stylecheck",
  "version": "1.0.0",
  "description": "A CLI app to check XAML files using rules developed by the Flinders RPA team",
  "scripts": {
    "test": "mocha --require esm --recursive",
    "lint": "eslint .",
    "docs": "jsdoc -c .jsdocrc.json",
    "coverage": "cross-env NODE_ENV=test nyc mocha --recursive"
  },
  "bin": {
    "xaml-stylecheck": "bin/xaml-stylecheck"
  },
  "author": "Corey Wallis <corey.wallis@flinders.edu.au>",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "babel-plugin-istanbul": "^5.1.4",
    "cross-env": "^5.2.0",
    "escape-regex-string": "^1.0.6",
    "eslint": "^6.0.1",
    "eslint-config-jquery": "^2.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsdoc": "^15.5.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-security": "^1.4.0",
    "jsdoc": "^3.6.3",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "compare-versions": "^3.5.0",
    "esm": "^3.2.25",
    "sync-request": "^6.1.0",
    "xmldom": "^0.1.27",
    "xpath": "0.0.27"
  },
  "directories": {
    "test": "test",
    "doc": "doc"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
